<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F5FF">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_area">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_bubbles"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#E4FBFF"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_background"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/home_banner"
                    android:scaleType="centerCrop"
                    android:alpha="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_bubble_age"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="20대"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_bubble_white"
                    android:textColor="#555555"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="40dp"
                    android:elevation="5dp"/>

                <TextView
                    android:id="@+id/tv_bubble_gender"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="여성"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_bubble_white"
                    android:textColor="#555555"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="60dp"
                    android:layout_marginEnd="40dp"
                    android:elevation="5dp"/>

                <TextView
                    android:id="@+id/tv_bubble_relation"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="연인"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_bubble_white"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:elevation="10dp"/>

                <TextView
                    android:id="@+id/tv_bubble_situation"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="생일"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_bubble_white"
                    android:textColor="#555555"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="50dp"
                    android:elevation="5dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_keyword_title_message_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="이런 편지 문구 어때요?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/layout_bubbles"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_keyword_result_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="1dp"
                app:layout_constraintTop_toBottomOf="@id/tv_keyword_title_message_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bg_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/img_gift_result_message"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/tv_content_message_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:text="작은 순간 속에서 큰 행복을 느끼세요. 당신의 일상이 더욱 특별해지길 바랍니다. 텍스트가 길어지면 이미지도 같이 길어집니다."
                            android:textSize="14sp"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_keywordText_recommend_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'20대 연인의 생일에는 이런 선물을 추천해요!'"
                android:textColor="@color/colorGrayIcon"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/card_keyword_result_message"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_keywordText_recommend_label">

                <TextView
                    android:id="@+id/tv_title_best"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천선물 베스트 3"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_gift_best"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_best" />

                <TextView
                    android:id="@+id/tv_title_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="이런 선물도 괜찮아요"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_gift_best" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_gift_rest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_rest" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/result_bnv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="5dp"
            app:menu="@menu/menu_gift_result"
            app:itemIconSize="29dp"
            app:itemIconTint="@color/color_bottom_navigation"
            app:itemTextColor="@color/color_bottom_navigation"
            app:labelVisibilityMode="labeled"
            app:itemRippleColor="@android:color/transparent"
            app:itemActiveIndicatorStyle="@style/BottomNav_NoIndicator" />

    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>