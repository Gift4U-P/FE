<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F5FF">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_area">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_bubbles"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#E4FBFF"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_background"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/home_banner"
                    android:scaleType="centerCrop"
                    android:alpha="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_bubble_age"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="20대"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_bubble_white"
                    android:textColor="#555555"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="40dp"
                    android:elevation="5dp"/>

                <TextView
                    android:id="@+id/tv_bubble_gender"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="여성"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_bubble_white"
                    android:textColor="#555555"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="60dp"
                    android:layout_marginEnd="40dp"
                    android:elevation="5dp"/>

                <TextView
                    android:id="@+id/tv_bubble_relation"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="연인"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_bubble_white"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:elevation="10dp"/>

                <TextView
                    android:id="@+id/tv_bubble_vibe"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="세련된"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_bubble_white"
                    android:textColor="#555555"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="50dp"
                    android:elevation="5dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_recommend_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이런 선물을 추천해요"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/layout_bubbles"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_result_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="20dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/tv_recommend_label"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/result_bnv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="5dp"
            app:menu="@menu/menu_gift_result"
            app:itemIconSize="29dp"
            app:itemIconTint="@color/color_bottom_navigation"
            app:itemTextColor="@color/color_bottom_navigation"
            app:labelVisibilityMode="labeled"
            app:itemRippleColor="@android:color/transparent"
            app:itemActiveIndicatorStyle="@style/BottomNav_NoIndicator" />

    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>